{
  "name": "encoding-switcher",
  "displayName": "Encoding Switcher",
  "description": "Automatically detect and switch the encoding of the file to edit",
  "version": "0.0.1",
  "publisher": "Tosox",
  "license":"MIT",
  "engines": {
    "vscode": "^1.81.0"
  },
  "enabledApiProposals": [
    "textDocumentEncoding"
  ],
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "xml",
    "encoding",
    "detect"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "xml",
        "aliases": [
          "Extensible Markup Language"
        ],
        "extensions": [
          ".xml"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "eslint": "^9.21.0",
    "glob": "^11.0.1",
    "mocha": "^11.1.0",
    "typescript": "^5.8.2",
    "@vscode/test-electron": "^2.4.1"
  }
}
